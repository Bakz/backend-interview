<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <div class="sticky-top mb-2" style="border-bottom: 1px solid black; background-color: white;">
        <nav class="navbar navbar-light mb-2" style="border-bottom: 1px solid black;">
          <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">KungfuTodo</span>
            <div class="d-flex" id="search-tool">
              <div class="input-group input-group-sm">
                <input type="text" class="form-control" placeholder="Search...">
                <button type="reset" class="btn btn-outline-secondary"><img src="icon-x.svg"></button>
              </div>
            </div>
          </div>
        </nav>
        <div class="card mb-2">
          <button class="btn" id="new-todo-collapse-button" type="button" data-bs-toggle="collapse" data-bs-target="div.card-body.collapse" aria-expanded="false">Create a New Todo</button>
          <div class="card-body collapse">
            <form id="new-todo-form" action="/todo" method="POST">
              <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" required>
              </div>
              <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" name="description" rows="4"></textarea>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
              <button type="reset" class="btn btn-secondary">Reset</button>
            </form> 
          </div>
        </div> 
      </div>
      <div id="todo-container">
        {{#each todo}}
        <div class="card todo-card searchable mb-2" data-todo-id="{{this.id}}" data-todo-title="{{this.title}}" data-todo-description="{{this.description}}">
          <button type="button" class="delete align-self-end" style="border: none; background-color: transparent;"><img src="icon-x.svg"></button>
          <div class="card-body pt-0">
            <form class="todo-form" action="/todo/{{this.id}}">
              <div class="mb-3">
                <label for="title-{{this.id}}" class="form-label">Title</label>
                <input type="text" class="form-control" id="title-{{this.id}}" name="title" value="{{this.title}}" required>
              </div>
              <div class="mb-3">
                <label for="description-{{this.id}}" class="form-label">Description</label>
                <textarea class="form-control" id="description-{{this.id}}" name="description" rows="4">{{this.description}}</textarea>
              </div>
              <div class="form-button-wrapper" style="display: none;">
                <button type="submit" class="btn btn-primary">Update</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
              </div>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    <!---->
    <script src="script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
  </body>
</html>